              form(action="https://formspree.io/david.magee15@yahoo.com" method="POST")
                input(type='text' placeholder='Name' class='smallForm' name="name")
                input(type='text' placeholder='Email' class='smallForm' name="_replyto")
                input(type='text' placeholder='Subject' class='smallForm' name="subject")
                textarea(type='text' placeholder='Information' name="body")
