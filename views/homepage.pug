          .contactTitleContainer
            h1.contactTitle Contact
          .contactContent
            .contactLinks
              h1.emailTitle Email
              p.email david.magee15@yahoo.com
              h1.accountsTitle Accounts
              a(href='https://github.com/dmagee15')
                .account
                  img(src='/public/css/GitHub-Mark-120px-plus.png')
                  p Github
              a(href='https://codepen.io/dmagee15/')
                .account
                  img(src='/public/css/codepen.png')
                  p CodePen
              a(href='https://www.freecodecamp.org/dmagee15')
                .account
                  img(src='/public/css/freecodecamp.svg')
                  p FreeCodeCamp
